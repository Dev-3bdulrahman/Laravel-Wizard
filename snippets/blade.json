{
  "Blade Component": {
    "prefix": "l:blade",
    "body": [
      "<div>",
      "    <!-- ${1:Component Description} -->",
      "    $2",
      "</div>"
    ],
    "description": "Create a new Blade component"
  },
  "Blade If Statement": {
    "prefix": "l:if",
    "body": [
      "@if ($1)",
      "    $2",
      "@endif"
    ],
    "description": "Blade if statement"
  },
  "Blade If-Else Statement": {
    "prefix": "l:ifelse",
    "body": [
      "@if ($1)",
      "    $2",
      "@else",
      "    $3",
      "@endif"
    ],
    "description": "Blade if-else statement"
  },
  "Blade Foreach Loop": {
    "prefix": "l:foreach",
    "body": [
      "@foreach ($$1 as $$2)",
      "    $3",
      "@endforeach"
    ],
    "description": "Blade foreach loop"
  },
  "Blade Forelse Loop": {
    "prefix": "l:forelse",
    "body": [
      "@forelse ($$1 as $$2)",
      "    $3",
      "@empty",
      "    $4",
      "@endforelse"
    ],
    "description": "Blade forelse loop"
  },
  "Blade For Loop": {
    "prefix": "l:for",
    "body": [
      "@for ($$1 = 0; $$1 < $2; $$1++)",
      "    $3",
      "@endfor"
    ],
    "description": "Blade for loop"
  },
  "Blade While Loop": {
    "prefix": "l:while",
    "body": [
      "@while ($1)",
      "    $2",
      "@endwhile"
    ],
    "description": "Blade while loop"
  },
  "Blade Section": {
    "prefix": "l:section",
    "body": [
      "@section('$1')",
      "    $2",
      "@endsection"
    ],
    "description": "Blade section"
  },
  "Blade Extends": {
    "prefix": "l:extends",
    "body": [
      "@extends('$1')",
      "",
      "@section('$2')",
      "    $3",
      "@endsection"
    ],
    "description": "Blade extends layout"
  },
  "Blade Yield": {
    "prefix": "l:yield",
    "body": [
      "@yield('$1')"
    ],
    "description": "Blade yield"
  },
  "Blade Include": {
    "prefix": "l:include",
    "body": [
      "@include('$1'${2:, ['$3' => $4]})"
    ],
    "description": "Blade include"
  },
  "Blade Component Tag": {
    "prefix": "l:component",
    "body": [
      "<x-$1${2: :$3=\"$4\"}>",
      "    $5",
      "</x-$1>"
    ],
    "description": "Blade component tag"
  },
  "Blade Self-Closing Component Tag": {
    "prefix": "l:component-self",
    "body": [
      "<x-$1${2: :$3=\"$4\"} />"
    ],
    "description": "Blade self-closing component tag"
  },
  "Blade Slot": {
    "prefix": "l:slot",
    "body": [
      "<x-slot:$1>",
      "    $2",
      "</x-slot>"
    ],
    "description": "Blade slot"
  },
  "Blade Auth Check": {
    "prefix": "l:auth",
    "body": [
      "@auth${1:('$2')}",
      "    $3",
      "@endauth"
    ],
    "description": "Blade auth check"
  },
  "Blade Guest Check": {
    "prefix": "l:guest",
    "body": [
      "@guest${1:('$2')}",
      "    $3",
      "@endguest"
    ],
    "description": "Blade guest check"
  },
  "Blade Can Check": {
    "prefix": "l:can",
    "body": [
      "@can('$1'${2:, $$3})",
      "    $4",
      "@endcan"
    ],
    "description": "Blade can check"
  },
  "Blade Cannot Check": {
    "prefix": "l:cannot",
    "body": [
      "@cannot('$1'${2:, $$3})",
      "    $4",
      "@endcannot"
    ],
    "description": "Blade cannot check"
  },
  "Blade Switch Statement": {
    "prefix": "l:switch",
    "body": [
      "@switch($1)",
      "    @case($2)",
      "        $3",
      "        @break",
      "    @case($4)",
      "        $5",
      "        @break",
      "    @default",
      "        $6",
      "@endswitch"
    ],
    "description": "Blade switch statement"
  },
  "Blade Error": {
    "prefix": "l:error",
    "body": [
      "@error('$1')",
      "    <div class=\"${2:alert alert-danger}\">{{ \\$message }}</div>",
      "@enderror"
    ],
    "description": "Blade error message"
  },
  "Blade CSRF Token": {
    "prefix": "l:csrf",
    "body": [
      "@csrf"
    ],
    "description": "Blade CSRF token"
  },
  "Blade Method Field": {
    "prefix": "l:method",
    "body": [
      "@method('$1')"
    ],
    "description": "Blade method field"
  },
  "Blade Livewire Component": {
    "prefix": "l:livewire-component",
    "body": [
      "<livewire:$1${2: :$3=\"$4\"} />"
    ],
    "description": "Blade Livewire component"
  },
  "Blade Filament Resource": {
    "prefix": "l:filament-resource",
    "body": [
      "<x-filament::page>",
      "    $1",
      "</x-filament::page>"
    ],
    "description": "Blade Filament resource page"
  }
}
